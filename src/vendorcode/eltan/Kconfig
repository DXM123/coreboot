menu "Eltan options"
	depends on USE_OPTION_TABLE

config ELTAN_USE_FIXED_BAUDRATE
	bool "force usage of fixed baudrate for debug console"
	default y
	depends on USE_OPTION_TABLE
	help
	  Enable or disable fixed baudrate for debug output even when cmos is used
	
endmenu

